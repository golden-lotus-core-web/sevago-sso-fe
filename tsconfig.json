{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,                 // ✅ sinh file .d.ts
    "declarationDir": "dist",            // ✅ xuất ra dist/
    "emitDeclarationOnly": false,        // ✅ build code + type
    "outDir": "dist",                    // ✅ file .js và .d.ts cùng nằm trong dist
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
